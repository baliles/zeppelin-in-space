#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>
# heroku inline buildpack

set -e

build_dir=$1
cache_dir=$2
env_dir=$3
bp_dir=$(dirname $(dirname $0))


notice() {
  echo "-----> $@..."
}

start() {
  echo -n "-----> $@..."
}

finish() {
  echo " Done."
}

cd $build_dir

start Installing Zeppelin
curl -s https://s3.amazonaws.com/heroku-spark/zeppelin-0.6.0-bin-netinst.tgz | tar xz
mv zeppelin-0.6.0-bin-netinst zeppelin-home
$build_dir/zeppelin-home/bin/install-interpreter.sh --name postgresql
rm -rf  $build_dir/zeppelin-home/interpteter/spark/dep
rm -rf  $build_dir/zeppelin-home/interpteter/spark/R
rm -rf  $build_dir/zeppelin-home/interpteter/spark/pyspark
mv $bp_dir/conf/zeppelin-env.sh $build_dir/zeppelin-home/conf
mv $bp_dir/conf/zeppelin-site.xml $build_dir/zeppelin-home/conf
finish Installing Zeppelin

start Configuring NGINX
mv $bp_dir/conf/htpasswd.erb $build_dir/space-proxy/conf
mv $bp_dir/conf/nginx.conf.erb $build_dir/space-proxy/conf
finish Configuring NGINX



